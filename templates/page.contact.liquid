{%- comment -%}{% section 'page-contact-template' %}{%- endcomment -%}
<div class="page-width page-content">

    <div class="grid">
        <div class="grid__item medium-up--three-quarters medium-up--push-one-eighth">

            <header class="section-header">
            <h1 class="section-header__title">{{ page.title }}</h1>
            </header>

            <div class="rte text-center mb-4">
                {{page.content}}
            </div>

        </div>
    </div>


    <div class="kontakt-flex">
        {% section 'kontakt-zakaznicky_servis' %}
        {% unless shop.url contains "ahinsashoes.com" %}
            {% section 'kontakt-prodejna_v_praze' %}
        {% endunless %}
    </div>
    <div class="kontakt-flex">
        {% section 'kontakt-addresses' %}
        {% section 'kontakt-improvement_ideas' %}
    </div>
</div>