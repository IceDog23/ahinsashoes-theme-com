<div class="page-width page-content">

  {%- render 'breadcrumbs' -%}

	<div class="grid">
    <div class="grid__item medium-up--three-quarters medium-up--push-one-eighth">

      <header class="section-header">
        <h1 class="section-header__title">{{ page.title }}</h1>
      </header>

      <div class="rte rte--nomargin">        
        {% if page.content contains "<!-- [widget] -->" %}
          {% assign splitted_page = page.content | split: "<!-- [widget] -->" %}
          {% for page_part in splitted_page %}
            {{ page_part }}
            {% include 'page-widget', widget_id: forloop.index %}
          {% endfor %}
        {% elsif page.content contains "[widget]" %}
          {% assign splitted_page = page.content | split: "[widget]" %}
          {% for page_part in splitted_page %}
            {{ page_part }}
            {% include 'page-widget', widget_id: forloop.index %}
          {% endfor %}
          {% else %}
          {{page.content}}
        {% endif %}
      </div>

    </div>
  </div>

</div>
