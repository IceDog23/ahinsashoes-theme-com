{% if section.blocks.size > 0 %}
  <div class="page-width section-store-gallery">

      <h2 class="text-center">
          {{section.settings.heading}}
      </h2>

      <div class="grid flex-grid--center flex-grid">
          {% for block in section.blocks %}
              {% case block.type %}
              {% when "single_image" %}
              <div class="grid__item single-image medium-up--one-half">

                  <img src="{{block.settings.image | img_url: '1200x800', crop: 'center'}}" alt="{{block.settings.image.alt}}">
              </div>
              {% else %}
                  <div class="grid__item medium-up--one-half">
                      <div class="four-images">
                              <img src="{{block.settings.image1 | img_url: '1200x800', crop: 'center'}}" alt="{{block.settings.image1.alt}}">
                              <img src="{{block.settings.image2 | img_url: '1200x800', crop: 'center'}}" alt="{{block.settings.image2.alt}}">
                              <img src="{{block.settings.image3 | img_url: '1200x800', crop: 'center'}}" alt="{{block.settings.image3.alt}}">
                              <img src="{{block.settings.image4 | img_url: '1200x800', crop: 'center'}}" alt="{{block.settings.image4.alt}}">
                      </div>        
                  </div>
              {% endcase %}
          {% endfor %}
          <div class="grid__item medium-up--one-half">
              
          </div>
      </div>
  </div>
{% endif %}

{% schema %}
    {
      "name": "Gallery",
      "class": "index-section",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Jak to u nás vypadá"
        }
      ],
      "blocks": [
      {
        "type": "single_image",
        "name": "Single Image",
        "settings": [
          {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
          }
        ]
      },
      {
        "type": "four_images",
        "name": "Four Images",
        "settings": [
            {
                "type": "image_picker",
                "id": "image1",
                "label": "Image 1"
            },
            {
                "type": "image_picker",
                "id": "image2",
                "label": "Image 2"
            },
            {
                "type": "image_picker",
                "id": "image3",
                "label": "Image 3"
            },
            {
                "type": "image_picker",
                "id": "image4",
                "label": "Image 4"
            }
        ]
      }
      ],
      "presets": [
        {
          "name": "Gallery",
          "blocks": []
        }
      ]
    }
  {% endschema %}
  