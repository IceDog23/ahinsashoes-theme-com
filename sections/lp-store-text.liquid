<div class="page-width section-store-text">

    <h2 class="text-center">
        {{section.settings.heading}}
    </h2>

    <div class="grid flex-grid--center flex-grid">
        <div class="grid__item medium-up--one-third store-text-content">
            {{section.settings.content}}
        </div>
    </div>
</div>

{% schema %}
    {
      "name": "Reasons to visit",
      "class": "index-section",
      "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Proč je radost přijít do naší prodejny?"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Content"
        }
      ],
      "presets": [
        {
          "name": "Reasons to visit"
        }
      ]
    }
  {% endschema %}
  